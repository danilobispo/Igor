<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/login_background"
    tools:context=".fragment.NewAdventure">

    <android.support.design.card.MaterialCardView
        android:id="@+id/materialCardView"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginStart="10dp"
        android:layout_marginTop="50dp"
        android:layout_marginEnd="10dp"
        android:layout_marginBottom="30dp"
        app:cardBackgroundColor="#E2E2E1"
        app:cardCornerRadius="10dp">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <ImageView
                android:id="@+id/iv_close"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="5dp"
                android:layout_marginTop="5dp"
                android:src="@drawable/ic_close" />

            <TextView
                android:id="@+id/tv_header_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="15dp"
                android:layout_marginTop="8dp"
                android:layout_toEndOf="@id/iv_close"
                android:text="Criar Aventura"
                android:textColor="@color/green_dark" />

            <ScrollView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/tv_header_title">

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="25dp"
                    android:orientation="vertical"
                    android:paddingStart="35dp"
                    android:paddingEnd="35dp">

                    <TextView
                        android:id="@+id/description1"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Dê um nome para a sua aventura"
                        android:textColor="#877D91" />

                    <EditText
                        android:id="@+id/et_title"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_below="@id/description1"
                        android:hint="Nome da aventura, se tiver duas linhas ela ocupa esse espaço"
                        android:textColor="@color/colorPrimary"
                        android:textColorHint="@color/colorPrimary" />

                    <TextView
                        android:id="@+id/description2"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_below="@id/et_title"
                        android:layout_marginTop="10dp"
                        android:text="Escreva a descrição da aventura"
                        android:textColor="#877D91" />

                    <EditText
                        android:id="@+id/et_descricao"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_below="@id/description2"
                        android:hint="Descrição"
                        android:textColor="@color/colorPrimary"
                        android:textColorHint="@color/colorPrimary" />

                    <TextView
                        android:id="@+id/description3"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_below="@id/et_descricao"
                        android:layout_marginTop="10dp"
                        android:text="Escolha uma imagem para a sua aventura"
                        android:textColor="#877D91" />

                    <RelativeLayout
                        android:id="@+id/themes"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_below="@id/description3"
                        android:layout_marginTop="10dp">

                        <ImageView
                            android:id="@+id/image_1"
                            android:layout_width="match_parent"
                            android:layout_height="80dp"
                            android:scaleType="centerCrop"
                            android:src="@drawable/miniatura_imagem_automatica" />

                        <RadioButton
                            android:id="@+id/rb_1"
                            android:layout_width="match_parent"
                            android:layout_height="80dp"
                            android:checked="true" />

                        <ImageView
                            android:id="@+id/image_2"
                            android:layout_width="match_parent"
                            android:layout_height="80dp"
                            android:layout_below="@id/image_1"
                            android:layout_marginTop="5dp"
                            android:scaleType="centerCrop"
                            android:src="@drawable/miniatura_krevast" />

                        <RadioButton
                            android:id="@+id/rb_2"
                            android:layout_width="match_parent"
                            android:layout_height="80dp"
                            android:layout_below="@id/rb_1"
                            android:layout_marginTop="5dp" />

                        <ImageView
                            android:id="@+id/image_3"
                            android:layout_width="match_parent"
                            android:layout_height="80dp"
                            android:layout_below="@id/image_2"
                            android:layout_marginTop="5dp"
                            android:scaleType="centerCrop"
                            android:src="@drawable/miniatura_corvali" />

                        <RadioButton
                            android:id="@+id/rb_3"
                            android:layout_width="match_parent"
                            android:layout_height="80dp"
                            android:layout_below="@id/rb_2"
                            android:layout_marginTop="5dp" />

                        <ImageView
                            android:id="@+id/image_4"
                            android:layout_width="match_parent"
                            android:layout_height="80dp"
                            android:layout_below="@id/image_3"
                            android:layout_marginTop="5dp"
                            android:scaleType="centerCrop"
                            android:src="@drawable/miniatura_heartlands" />

                        <RadioButton
                            android:id="@+id/rb_4"
                            android:layout_width="match_parent"
                            android:layout_height="80dp"
                            android:layout_below="@id/rb_3"
                            android:layout_marginTop="5dp" />

                        <ImageView
                            android:id="@+id/image_5"
                            android:layout_width="match_parent"
                            android:layout_height="80dp"
                            android:layout_below="@id/image_4"
                            android:layout_marginTop="5dp"
                            android:scaleType="centerCrop"
                            android:src="@drawable/miniatura_coast" />

                        <RadioButton
                            android:id="@+id/rb_5"
                            android:layout_width="match_parent"
                            android:layout_height="80dp"
                            android:layout_below="@id/rb_4"
                            android:layout_marginTop="5dp" />

                    </RelativeLayout>

                    <Button
                        android:id="@+id/btn_finish"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_below="@id/themes"
                        android:layout_alignParentEnd="true"
                        android:layout_gravity="end"
                        android:layout_marginBottom="30dp"
                        android:minWidth="100dp"
                        android:minHeight="45dp"
                        android:text="Pronto"
                        android:textColor="#FFF"
                        app:backgroundTint="@color/green_dark" />

                    <ProgressBar
                        android:id="@+id/progressBar"
                        style="?android:attr/progressBarStyle"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_below="@id/themes"
                        android:layout_centerInParent="true"
                        android:visibility="invisible" />

                </RelativeLayout>

            </ScrollView>

        </RelativeLayout>

    </android.support.design.card.MaterialCardView>

    <android.support.design.widget.FloatingActionButton
        android:id="@+id/fab_edit_mode"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="5dp"
        android:clickable="true"
        android:src="@drawable/ic_criar_aventura"
        app:backgroundTint="@color/green"
        app:fabSize="normal"
        app:layout_constraintBottom_toTopOf="@+id/materialCardView"
        app:layout_constraintEnd_toEndOf="@+id/materialCardView"
        app:layout_constraintTop_toTopOf="@+id/materialCardView"
        app:layout_constraintVertical_bias="0.535"
        app:maxImageSize="30dp" />

</android.support.constraint.ConstraintLayout>